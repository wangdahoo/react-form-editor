{
    "compilerOptions": {
        "outDir": "./docs/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "module": "es6",
        "moduleResolution": "node",
        "target": "es5",
        "allowJs": true,
        "jsx": "react",
        "esModuleInterop": true,
        "experimentalDecorators": true
    },
    "include": [
        "./src/**/*",
        "./src/**/app"
    ]
}
